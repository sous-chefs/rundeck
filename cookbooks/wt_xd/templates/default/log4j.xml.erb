<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE log4j:configuration SYSTEM "log4j.dtd">
<log4j:configuration xmlns:log4j="http://jakarta.apache.org/log4j/">
   <!-- FileLog is set to be a RollingFileAppender -->
   <appender name="FileLog" class="org.apache.log4j.RollingFileAppender">
       <param name="file" value="${com.webtrends.log.dir}/ExternalDataMRTwitter.log" />
       <param name="MaxFileSize" value="100MB" />
       <param name="MaxBackupIndex" value="10"/>
       <param name="append" value="true" />
       <layout class="org.apache.log4j.PatternLayout">
           <param name="ConversionPattern" value="%d [%t] %-5p %C{6} (%F:%L) - %m%n"/>
       </layout>
   </appender>
   <!-- ErrorLog is set to be a RollingFileAppender -->
   <appender name="ErrorLog" class="org.apache.log4j.RollingFileAppender">
       <param name="file" value="${com.webtrends.log.dir}/ExternalDataMRTwitterError.log" />
       <param name="MaxFileSize" value="100MB" />
       <param name="MaxBackupIndex" value="10"/>
       <param name="append" value="true" />
       <param name="Threshold" value="ERROR"/>
       <layout class="org.apache.log4j.PatternLayout">
           <param name="ConversionPattern" value="%d [%t] %-5p %C{6} (%F:%L) - %m%n"/>
       </layout>
   </appender>
   <root>
       <!-- Set root logger level to DEBUG and its only appender to A1 -->
       <level value="<%= @log_level %>" />
       <appender-ref ref="FileLog" />
       <appender-ref ref="ErrorLog" />
   </root>
</log4j:configuration>
